# vim: filetype=i3config

# This config file will use environmental variables such as $BROWSER and $TERMINAL.
# You can set these variables in ~/.profile or ~/.bash_profile if you have it as below:

exec_always --no-startup-id 	autotiling
exec_always --no-startup-id     $HOME/.config/polybar/launch.sh
exec_always --no-startup-id     picom --config ~/.config/picom/picom.conf --experimental-backends
exec --no-startup-id 	    	nm-applet
exec --no-startup-id 	    	blueman-applet 
exec --no-startup-id 	    	i3-battery-popup -L 15
exec --no-startup-id 	    	wal -q -i ~/Pictures/Wallpapers/


# #---Basic Definitions---# #
# smart_gaps on
smart_borders on
set $inner_gaps 7
set $outer_gaps 10
set $term --no-startup-id kitty
set $mod Mod4
set $stoprec --no-startup-id dmenurecord kill
set $shutdown sudo -A shutdown -h now
set $reboot sudo -A reboot
set $netrefresh --no-startup-id sudo -A systemctl restart NetworkManager
set $hibernate sudo -A systemctl suspend
title_align center
font pango:monospace 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# #---Gaps---# #
for_window [class="^.*"] border pixel 2
gaps inner $inner_gaps
gaps outer $outer_gaps

# Window borders
client.focused          #4c7899 #285577 #ffffff #2e9ef4   #285577
client.focused          #4c7899 #285577 #ffffff #2e9ef4   #abb2bf
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #ffffff


# #---Dropdown Windows---# #
# General dropdown window traits. The order can matter.
for_window [instance="dropdown_*"] floating enable
for_window [instance="dropdown_*"] sticky enable
for_window [instance="dropdown_tmuxdd"] resize set 625 450
for_window [instance="dropdown_dropdowncalc"] resize set 800 300
for_window [instance="dropdown_tmuxdd"] border pixel 3
for_window [instance="dropdown_dropdowncalc"] border pixel 2
for_window [instance="dropdown_*"] move position center


# #---Basic Bindings---# #
bindsym $mod+Return 		exec --no-startup-id kitty
bindsym $mod+Shift+Return 		exec --no-startup-id alacritty

bindsym $mod+space		focus mode_toggle
bindsym $mod+Escape 		floating toggle

# #---Letter Key Bindings---# #
bindsym $mod+q			[con_id="__focused__" instance="^(?!dropdown_).*$"] kill
bindsym $mod+Shift+q		[con_id="__focused__" instance="^(?!dropdown_).*$"] exec --no-startup-id kill -9 `xdotool getwindowfocus getwindowpid`

#bindsym $mod+w 			exec --no-startup-id firefox
bindsym $mod+w 			exec --no-startup-id google-chrome-stable
bindsym $mod+Shift+w		exec $term -e nmtui

# bindsym $mod+e			
bindsym $mod+Shift+e		exec --no-startup-id  thunar /home/omid

bindsym $mod+Shift+r		exec --no-startup-id winresize

bindsym $mod+t			exec --no-startup-id  telegram-desktop
bindsym $mod+Shift+t		exec $term -e tmux	

bindsym $mod+y		exec --no-startup-id flameshot gui -p ~/Pictures/Screnshots/
bindsym $mod+Shift+y		exec --no-startup-id flameshot full -p ~/Pictures/Screnshots/
bindsym Print     		exec --no-startup-id flameshot full -p ~/Pictures/Screnshots/

# bindsym Print 			exec --no-startup-id maim "/home/$USER/Pictures/screenshots/$(date)"
# bindsym $mod+Print 		exec --no-startup-id maim --window $(xdotool getactivewindow) "/home/$USER/Pictures/screenshots/$(date)"
# bindsym Shift+Print 		exec --no-startup-id maim --select "/home/$USER/Pictures/screenshots/$(date)"
# 

bindsym $mod+Shift+u		exec --no-startup-id i3resize down

bindsym $mod+i 			exec $term -e gotop
bindsym $mod+Shift+i		exec --no-startup-id i3resize up

bindsym $mod+Shift+o		exec --no-startup-id i3resize right

bindsym $mod+a			exec --no-startup-id ddspawn dropdowncalc -f mono:pixelsize=24
bindsym $mod+Shift+a		exec $term -e alsamixer

bindsym $mod+s			gaps inner current plus 5
bindsym $mod+Shift+s		gaps inner current minus 5


# Moving workspaces between screens 
# bindsym $mod+d 			exec --no-startup-id dmenu_run
bindsym $mod+d 			exec fish -c "rofi -show run"

# Switch to program
bindsym $mod+p				exec rofi -show emoji -modi emoji
# bindsym $mod+p 			move workspace to output right


bindsym $mod+Shift+d		gaps inner current set 0; gaps outer current set 0
bindsym $mod+f			fullscreen toggle

bindsym $mod+h			focus left
bindsym $mod+Shift+h		move left 30
bindsym $mod+Ctrl+h		move workspace to output left

bindsym $mod+j			focus down
bindsym $mod+Shift+j		move down 30
bindsym $mod+Ctrl+j		move workspace to outpu down

bindsym $mod+k			focus up
bindsym $mod+Shift+k		move up 30
bindsym $mod+Ctrl+k		move workspace to output up

bindsym $mod+l			focus right
bindsym $mod+Shift+l		move right 30
bindsym $mod+Ctrl+l		move workspace to output right

bindsym $mod+semicolon		sticky toggle;

bindsym $mod+z			gaps outer current plus 5
bindsym $mod+Shift+z		gaps outer current minus 5

bindsym $mod+x			exec --no-startup-id mpc pause; exec --no-startup-id pauseallmpv ; exec --no-startup-id i3lock-fancy; exec --no-startup-id xset dpms force off
# bindsym $mod+Shift+x		

# Open clipboard
bindsym $mod+Shift+c 		exec "rofi -modi 'clipboard:greenclip print' -show clipboard"
# bindsym $mod+c			exec --no-startup-id picom
# bindsym $mod+Shift+c		exec --no-startup-id killall picom


bindsym $mod+v			exec --no-startup-id $term -e nvim
#bindsym $mod+Shift+v

bindsym $mod+b			exec --no-startup-id wal -q -i ~/Pictures/Wallpapers/
bindsym $mod+Shift+b		sticky toggle;

bindsym $mod+n			exec --no-startup-id kill -s USR1 $(pidof deadd-notification-center)
bindsym $mod+Shift+n		floating toggle; sticky toggle; exec --no-startup-id hover right

bindsym $mod+m 			exec --no-startup-id spotify
bindsym $mod+Shift+m		exec --no-startup-id lmc toggle

# #---Workspace Bindings---# #
bindsym $mod+Home		            workspace $ws1
bindsym $mod+Shift+Home		      move container to workspace $ws1
bindsym $mod+End		            workspace $ws10
bindsym $mod+Shift+End		      move container to workspace $ws10
bindsym $mod+Prior		          workspace prev
bindsym $mod+Shift+Prior	      move container to workspace prev
bindsym $mod+Tab		            exec --no-startup-id rofi -show window 
# toggle tiling / floating
bindsym $mod+Shift+Tab		      workspace prev
bindsym $mod+apostrophe		      split horizontal ;; exec $term
bindsym $mod+slash		          split vertical ;; exec $term
bindsym $mod+Shift+slash	      kill
bindsym $mod+backslash		      workspace back_and_forth

